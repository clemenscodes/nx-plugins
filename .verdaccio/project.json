{
    "name": "verdaccio",
    "$schema": "../node_modules/nx/schemas/project-schema.json",
    "targets": {
        "run-many-e2e": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "ts-node {projectRoot}/src/run-many-e2e.ts"
            }
        },
        "affected-e2e": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "ts-node {projectRoot}/src/affected-e2e.ts"
            }
        },
        "start-local-registry": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "ts-node {projectRoot}/src/start-local-registry.ts"
            }
        },
        "stop-local-registry": {
            "executor": "nx:run-commands",
            "options": {
                "color": true,
                "command": "ts-node {projectRoot}/src/stop-local-registry.ts"
            }
        },
        "local-registry": {
            "executor": "@nx/js:verdaccio",
            "options": {
                "port": 4873,
                "clear": true,
                "location": "none",
                "config": "{projectRoot}/config.yml",
                "storage": "{projectRoot}/tmp/local-registry/storage"
            }
        }
    }
}
