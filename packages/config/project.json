{
    "name": "@/config",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "root": "packages/config",
    "sourceRoot": "packages/config/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/config",
                "rootDir": "packages/config/src",
                "main": "packages/config/src/index.ts",
                "tsConfig": "packages/config/tsconfig.lib.json",
                "assets": []
            },
            "configurations": {
                "ci": {}
            }
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/config/**/*.ts",
                    "packages/config/package.json"
                ]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/config/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
