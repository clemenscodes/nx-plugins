{
    "name": "command",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/command/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "packages/command/**/*.ts",
                    "packages/command/package.json"
                ]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        },
        "build": {
            "dependsOn": ["lint", "^build"],
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/command",
                "main": "packages/command/src/index.ts",
                "tsConfig": "packages/command/tsconfig.lib.json",
                "assets": []
            },
            "configurations": {
                "ci": {}
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/command/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "coverageReporters": ["lcov"],
                    "codeCoverage": true
                }
            }
        }
    },
    "tags": []
}
