{
    "$schema": "http://json-schema.org/schema",
    "$id": "Library",
    "title": "Library generator",
    "description": "Generate a C or C++ library and link it against another library or binary",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the library",
            "aliases": ["name", "n"],
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "What name would you like to use for the library?"
        },
        "language": {
            "type": "string",
            "description": "Whether to use C or C++",
            "aliases": ["language", "lang", "c"],
            "$default": {
                "$source": "argv",
                "index": 1
            },
            "enum": ["C", "C++"],
            "default": "C++",
            "x-prompt": "C or C++?",
            "x-priority": "important"
        },
        "skipFormat": {
            "description": "Skip formatting files.",
            "type": "boolean",
            "default": false
        },
        "generateTests": {
            "description": "Generate tests using GoogleTest or CMocka.",
            "type": "boolean",
            "default": true
        }
    },
    "required": ["name"]
}
