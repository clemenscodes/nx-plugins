function(set_compiler)
    if (${CMAKE_SYSTEM_NAME} MATCHES "Darwin")
        set(CMAKE_C_COMPILER gcc-13 PARENT_SCOPE)
        set(CMAKE_CXX_COMPILER ${CMAKE_C_COMPILER} PARENT_SCOPE)
    else()
        set(CMAKE_C_COMPILER gcc PARENT_SCOPE)
        set(CMAKE_CXX_COMPILER ${CMAKE_C_COMPILER} PARENT_SCOPE)
    endif()
endfunction()
