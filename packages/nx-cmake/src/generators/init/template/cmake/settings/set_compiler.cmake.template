function(set_compiler)
    if (${CMAKE_SYSTEM_NAME} MATCHES "Darwin")
        set(CMAKE_C_COMPILER gcc-13 CACHE INTERNAL "")
        set(CMAKE_CXX_COMPILER ${CMAKE_C_COMPILER} CACHE INTERNAL "")
    else()
        set(CMAKE_C_COMPILER gcc CACHE INTERNAL "")
        set(CMAKE_CXX_COMPILER ${CMAKE_C_COMPILER} CACHE INTERNAL "")
    endif()
endfunction()
