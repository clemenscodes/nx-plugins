{
    "name": "nx-cmake-e2e",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "packages/nx-cmake-e2e/tests",
    "targets": {
        "e2e": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/nx-cmake-e2e/jest.config.ts",
                "passWithNoTests": true,
                "runInBand": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            },
            "dependsOn": ["^test"]
        },
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/nx-cmake-e2e/**/*.ts"]
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional"
            }
        }
    },
    "implicitDependencies": ["nx-cmake"]
}
