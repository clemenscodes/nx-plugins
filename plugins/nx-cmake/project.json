{
    "name": "nx-cmake",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "root": "plugins/nx-cmake",
    "sourceRoot": "plugins/nx-cmake/src",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "plugins/nx-cmake/**/*.ts",
                    "plugins/nx-cmake/package.json",
                    "plugins/nx-cmake/generators.json",
                    "plugins/nx-cmake/executors.json"
                ]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        },
        "build": {
            "dependsOn": ["lint", "^build"],
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/plugins/nx-cmake",
                "main": "plugins/nx-cmake/src/index.ts",
                "external": "none",
                "tsConfig": "plugins/nx-cmake/tsconfig.lib.json",
                "assets": [
                    "plugins/nx-cmake/*.md",
                    "LICENSE",
                    {
                        "input": "./plugins/nx-cmake/src",
                        "glob": "**/!(*.ts)",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/nx-cmake/src",
                        "glob": "**/*.d.ts",
                        "output": "./src"
                    },
                    {
                        "input": "./plugins/nx-cmake",
                        "glob": "generators.json",
                        "output": "."
                    },
                    {
                        "input": "./plugins/nx-cmake",
                        "glob": "executors.json",
                        "output": "."
                    }
                ]
            },
            "configurations": {
                "ci": {}
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "plugins/nx-cmake/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "coverageReporters": ["lcov"],
                    "codeCoverage": true
                }
            }
        },
        "publish": {
            "command": "node .verdaccio/publish.mjs {projectName} --ver 1.0.0 --tag e2e"
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "syncVersions": false,
                "allowEmptyRelease": false,
                "noVerify": true,
                "trackDeps": false,
                "skipRootChangelog": true,
                "push": true,
                "skipCommit": false,
                "remote": "origin",
                "baseBranch": "main",
                "commitMessageFormat": "chore({projectName}): release v{version} [skip ci]",
                "changelogHeader": "# Changelog ({projectName})\n",
                "tagPrefix": "{projectName}-",
                "skipCommitTypes": [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "refactor",
                    "test"
                ]
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "dist/{projectRoot}",
                "commands": [
                    "nx version {projectName}",
                    "case \"$(git log -1 --format=%s)\" in \"chore({projectName}): release v\"*) npm publish --access=public;; *) exit 0;; esac"
                ]
            }
        }
    },
    "tags": []
}
