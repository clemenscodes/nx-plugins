{
    "$schema": "http://json-schema.org/schema",
    "$id": "Link",
    "title": "Linking generator",
    "description": "Link a library to another library or binary",
    "type": "object",
    "properties": {
        "source": {
            "type": "string",
            "description": "The source project in which another library will be linked into",
            "aliases": ["s"],
            "$default": {
                "$source": "argv",
                "index": 0
            },
            "x-prompt": "Which project should be linked into?",
            "x-dropdown": "projects",
            "x-priority": "important"
        },
        "target": {
            "type": "string",
            "description": "The target library to link into the source project",
            "aliases": ["t"],
            "$default": {
                "$source": "argv",
                "index": 1
            },
            "x-prompt": "Which library do you want to link into the project?",
            "x-dropdown": "projects",
            "x-priority": "important"
        },
        "link": {
            "type": "string",
            "description": "Whether to link the library statically or dynamically",
            "aliases": ["linking", "l"],
            "enum": ["shared", "static"],
            "$default": {
                "$source": "argv",
                "index": 2
            },
            "default": "shared",
            "x-prompt": "Static or shared library?",
            "x-priority": "important"
        },
        "skipFormat": {
            "description": "Skip formatting files.",
            "type": "boolean",
            "default": false
        }
    },
    "required": ["source", "target"]
}
