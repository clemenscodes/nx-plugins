{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.json"],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "ignoredDependencies": [
                            "@/config",
                            "@/file",
                            "@/graph",
                            "@/utils",
                            "@/util",
                            "@/types",
                            "@/log"
                        ],
                        "includeTransitiveDependencies": true
                    }
                ]
            }
        },
        {
            "files": [
                "./package.json",
                "./generators.json",
                "./executors.json"
            ],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/nx-plugin-checks": "error"
            }
        }
    ]
}
