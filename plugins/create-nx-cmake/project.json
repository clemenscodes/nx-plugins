{
    "name": "create-nx-cmake",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "root": "plugins/create-nx-cmake",
    "sourceRoot": "plugins/create-nx-cmake/bin",
    "projectType": "library",
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "plugins/create-nx-cmake/**/*.ts",
                    "plugins/create-nx-cmake/package.json"
                ]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        },
        "build": {
            "dependsOn": ["lint", "^build"],
            "executor": "@nx/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/plugins/create-nx-cmake",
                "main": "plugins/create-nx-cmake/bin/index.ts",
                "tsConfig": "plugins/create-nx-cmake/tsconfig.lib.json",
                "assets": ["plugins/create-nx-cmake/*.md"]
            },
            "configurations": {
                "ci": {}
            }
        },
        "test": {
            "dependsOn": ["build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "plugins/create-nx-cmake/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "coverageReporters": ["lcov"],
                    "codeCoverage": true
                }
            }
        },
        "publish": {
            "command": "node .verdaccio/publish.mjs {projectName} --ver=1.0.0 --tag=e2e"
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional",
                "syncVersions": false,
                "allowEmptyRelease": false,
                "noVerify": true,
                "trackDeps": false,
                "skipRootChangelog": true,
                "push": true,
                "skipCommit": false,
                "remote": "origin",
                "baseBranch": "main",
                "commitMessageFormat": "chore({projectName}): release v{version} [skip ci]",
                "changelogHeader": "# Changelog ({projectName})\n",
                "tagPrefix": "{projectName}-",
                "skipCommitTypes": [
                    "chore",
                    "build",
                    "ci",
                    "docs",
                    "refactor",
                    "test"
                ]
            }
        },
        "deploy": {
            "executor": "nx:run-commands",
            "options": {
                "cwd": "dist/{projectRoot}",
                "commands": [
                    "nx version {projectName}",
                    "case \"$(git log -1 --format=%s)\" in \"chore({projectName}): release v\"*) npm publish --access=public;; *) exit 0;; esac"
                ]
            }
        }
    },
    "tags": [],
    "implicitDependencies": ["nx-cmake"]
}
