{
    "name": "e2e-nx-cmake",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "application",
    "sourceRoot": "e2e/e2e-nx-cmake/tests",
    "targets": {
        "run-e2e": {
            "dependsOn": ["^start-local-registry", "^build"],
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "e2e/{projectName}/jest.config.ts",
                "passWithNoTests": true,
                "runInBand": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "finish-e2e": {
            "dependsOn": ["run-e2e"],
            "command": "nx stop-local-registry verdaccio"
        },
        "e2e": {
            "dependsOn": ["finish-e2e"],
            "executor": "nx:noop"
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["e2e/e2e-nx-cmake/**/*.ts"]
            },
            "configurations": {
                "ci": {
                    "maxWarnings": 0
                }
            }
        }
    },
    "implicitDependencies": ["verdaccio", "nx-cmake"]
}
