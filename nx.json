{
    "$schema": "./node_modules/nx/schemas/nx-schema.json",
    "defaultProject": "verdaccio",
    "nxCloudAccessToken": "NzU1N2M1YWQtZmZlYy00MjlmLTk3ZTAtNzFmMWFiMTc0ZTk2fHJlYWQ=",
    "workspaceLayout": {
        "appsDir": "bin",
        "libsDir": "packages"
    },
    "targetDefaults": {
        "build": {
            "dependsOn": ["lint", "^build"],
            "cache": true
        },
        "nx-cmake:cmake": {
            "cache": true,
            "dependsOn": ["^cmake"],
            "inputs": ["c", "^c"],
            "defaultConfiguration": "debug",
            "configurations": {
                "debug": {
                    "release": false,
                    "args": []
                },
                "release": {
                    "release": true,
                    "args": []
                }
            }
        },
        "nx-cmake:compile": {
            "cache": true,
            "dependsOn": ["^cmake", "^compile", "cmake"],
            "inputs": ["c", "^c"],
            "defaultConfiguration": "debug",
            "configurations": {
                "debug": {
                    "release": false,
                    "args": []
                },
                "release": {
                    "release": true,
                    "args": []
                }
            }
        },
        "nx-cmake:test": {
            "cache": true,
            "dependsOn": ["compile"],
            "inputs": ["c", "^c"],
            "defaultConfiguration": "debug",
            "configurations": {
                "debug": {
                    "release": false,
                    "args": []
                },
                "release": {
                    "release": true,
                    "args": []
                }
            }
        },
        "nx-cmake:lint": {
            "cache": true,
            "dependsOn": ["cmake"],
            "inputs": ["clangTidy", "c", "^c"],
            "defaultConfiguration": "local",
            "configurations": {
                "local": {
                    "args": []
                },
                "ci": {
                    "args": ["--warnings-as-errors=*"]
                }
            }
        },
        "nx-cmake:fmt": {
            "cache": true,
            "dependsOn": [],
            "inputs": ["clangFormat", "c", "^c"],
            "defaultConfiguration": "local",
            "configurations": {
                "local": {
                    "args": [],
                    "verbose": true,
                    "editFilesInPlace": true
                },
                "ci": {
                    "args": ["--dry-run", "--ferror-limit=0", "-Werror"],
                    "verbose": false,
                    "editFilesInPlace": false
                }
            }
        },
        "nx-cmake:execute": {
            "dependsOn": ["compile"],
            "inputs": ["c", "^c"],
            "defaultConfiguration": "debug",
            "configurations": {
                "debug": {
                    "release": false,
                    "args": []
                },
                "release": {
                    "release": true,
                    "args": []
                }
            }
        },
        "nx-cmake:debug": {
            "dependsOn": ["compile"],
            "inputs": ["c", "^c"],
            "defaultConfiguration": "debug",
            "configurations": {
                "debug": {
                    "release": false,
                    "args": []
                },
                "release": {
                    "release": true,
                    "args": []
                }
            }
        },
        "@nx/jest:jest": {
            "inputs": ["default", "^default", "{workspaceRoot}/jest.preset.js"],
            "options": {
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            },
            "cache": true
        },
        "nx-release-publish": {
            "executor": "@nx/js:release-publish",
            "options": {
                "packageRoot": "dist/{projectRoot}"
            }
        }
    },
    "namedInputs": {
        "c": [
            "{projectRoot}/**/*.cpp",
            "{projectRoot}/**/*.c",
            "{projectRoot}/**/*.h",
            "cmake",
            "nx-cmake"
        ],
        "clangFormat": [
            "{projectRoot}/.clang-format",
            "{workspaceRoot}/.clang-format"
        ],
        "clangTidy": [
            "{projectRoot}/.clang-tidy",
            "{workspaceRoot}/.clang-tidy"
        ],
        "cmake": [
            "{projectRoot}/CMakeLists.txt",
            "{projectRoot}/cmake/**/*.cmake",
            "{projectRoot}/cmake/**/*.cmake.in",
            "{workspaceRoot}/CMakeLists.txt",
            "{workspaceRoot}/.cmake/**/*.cmake"
        ],
        "nx-cmake": [{ "externalDependencies": ["nx-cmake"] }]
    },
    "generators": {
        "@nx/js": {
            "library": {
                "projectNameAndRootFormat": "derived",
                "minimal": true,
                "simpleName": true,
                "bundler": "tsc",
                "unitTestRunner": "jest"
            }
        },
        "nx-cmake": {
            "binary": {
                "language": "C",
                "generateTests": true
            },
            "library": {
                "language": "C",
                "generateTests": true
            }
        }
    },
    "release": {
        "projects": ["plugins/*"],
        "projectsRelationship": "independent",
        "releaseTagPattern": "{projectName}-{version}",
        "changelog": {
            "workspaceChangelog": false,
            "projectChangelogs": {
                "file": "{projectRoot}/CHANGELOG.md",
                "createRelease": "github"
            }
        },
        "git": {
            "commitMessage": "chore({projectName}): release version {version} [skip ci]"
        },
        "version": {
            "conventionalCommits": true
        }
    },
    "pluginsConfig": {
        "@nx/js": {
            "analyzeSourceFiles": true
        }
    },
    "plugins": ["nx-cmake"]
}
